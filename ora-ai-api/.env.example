# Server Configuration
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# DynamoDB Tables
DYNAMODB_USERS_TABLE=shadow-ai-users
DYNAMODB_JOURNAL_ENTRIES_TABLE=shadow-ai-journal-entries
DYNAMODB_CHAT_MESSAGES_TABLE=shadow-ai-chat-messages
DYNAMODB_COMMUNITY_POSTS_TABLE=shadow-ai-community-posts
DYNAMODB_COMMUNITY_COMMENTS_TABLE=shadow-ai-community-comments

# AI Provider Configuration
# Set AI_PROVIDER to 'anthropic', 'kimi', or 'auto' (auto-detects based on available API keys)
AI_PROVIDER=auto

# Anthropic Claude Configuration (kept for future use)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=1000

# Kimi K2.5 Configuration (NVIDIA/MoonshotAI)
# Use KIMI_API_KEY for MoonshotAI direct API, or NVIDIA_API_KEY for NVIDIA NIM
KIMI_API_KEY=your_kimi_api_key_here
# KIMI_BASE_URL=https://api.moonshot.cn/v1  # MoonshotAI direct API
# KIMI_BASE_URL=https://integrate.api.nvidia.com/v1  # NVIDIA NIM API
KIMI_MODEL=moonshotai/kimi-k2.5
KIMI_MAX_TOKENS=2000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:19006,exp://192.168.1.100:8081

# OpenAI Configuration (for vector embeddings)
OPENAI_API_KEY=your_openai_api_key_here
